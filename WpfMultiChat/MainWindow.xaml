<Window x:Class="WpfMultiChat.MainWindow" Background="AliceBlue"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfMultiChat"
        mc:Ignorable="d"
        Title="sendMsg" Height="450" Width="800"
        KeyDown="TextBlock_KeyDown">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Frame Height="416" Name="frame" Content="" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="650" NavigationUIVisibility="Hidden"/>
            <StackPanel Name="buttonList" HorizontalAlignment="Right" VerticalAlignment="Stretch" Width="150">
                <TextBlock FontFamily="Broadway" Name="signedAs" HorizontalAlignment="Left" VerticalAlignment="Center" TextWrapping="Wrap" Text="Signed in as Liel" Margin="0,10,0,0" Width="140" FontSize="14"/>
                <TextBlock FontSize="25" FontFamily="Arial Rounded MT" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" Text="Chat list:" Margin="0,10,10,0" Width="140"/>
                <Button Background="White" Foreground="DarkBlue" BorderThickness="0" HorizontalAlignment="Stretch" Content="Global Chat" Width="150" Click="Button_Click" Margin="0, 10, 0, 0"/>
                <Button Background="Transparent" Foreground="Red" BorderThickness="5" HorizontalAlignment="Left" Content="Add chat" Width="143" Margin="0, 10, 0, 0" Click="AddChat"/>
                <StackPanel Name="chatButtonList"/>
                <Button Background="Transparent" Foreground="Red" BorderThickness="5" HorizontalAlignment="Left" Content="Start a game" Width="143" Margin="0, 10, 0, 0" Click="StartGame"/>
                <StackPanel Name="chessButtonList"/>
            </StackPanel>
        </StackPanel>
    </Grid>

</Window>
